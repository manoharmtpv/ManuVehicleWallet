<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/heading"
        style="@style/TextColor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="COMPLAINT STATUS"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:id="@+id/email_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_below="@+id/heading">


    <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_cid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Compliant ID"
                android:text="12345"
               />

        </android.support.design.widget.TextInputLayout>
</RelativeLayout>


    <RelativeLayout
        android:id="@+id/email_rel1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_below="@+id/email_rel">


    <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
         >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_cdesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Compliant Description"
                android:text="Team is looking into this"

                />

        </android.support.design.widget.TextInputLayout>
        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/email_rel2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_below="@+id/email_rel1">


    <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_ctype"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Compliant Type"
                android:text="RTA"/>

        </android.support.design.widget.TextInputLayout>
</RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="42dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_below="@+id/email_rel2">

        <Button
            android:id="@+id/Btn_Created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="#FFE2E2"
            android:focusable="true"
            android:gravity="center"
            android:text="CREATED"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/Btn_Assigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="#FFE2E2"
            android:focusable="true"
            android:gravity="center"
            android:text="ASSIGNED"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/Btn_Resolved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="#F21212"
            android:focusable="true"
            android:gravity="center"
            android:text="RESOLVED"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/Btn_Closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="#FFE2E2"
            android:focusable="true"
            android:gravity="center"
            android:text="CLOSED"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <Button
        android:id="@+id/Btn_ok"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/buttonback"
        android:gravity="center"
        android:padding="2dp"
        android:text="OK"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold|italic" />

</RelativeLayout>