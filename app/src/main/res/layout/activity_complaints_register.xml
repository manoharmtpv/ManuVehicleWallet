<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
  >

    <Spinner
        android:id="@+id/simpleSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView4"
        android:padding="5dp"
        android:gravity="left"
        android:spinnerMode="dialog"

        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="SELECT TYPE OF COMPLAINT"
        android:background="@drawable/edittextshape"
        android:textStyle="bold"
        android:textSize="15dp"


        android:padding="5dp"
        android:textColor="#000080"

        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:text="Complaints Registration"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/Btn_newregister"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/simpleSpinner"
        android:layout_marginTop="76dp"
        android:text="New Complaint"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:background="@drawable/buttonback"/>

    <Button
        android:id="@+id/Btn_oldstatus"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Btn_newregister"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/Btn_newregister"
        android:layout_toRightOf="@+id/Btn_newregister"
        android:text="Status Of Old"
        android:background="@drawable/buttonback"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/Tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3F424B"
        android:text="Powered By : MOTHER TECHNOLOGIES PROJECT VENTURES"
        android:textColor="#ffff"
        android:textStyle="bold|italic"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_alignParentBottom="true" />


</RelativeLayout>